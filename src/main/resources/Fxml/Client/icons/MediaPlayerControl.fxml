<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.image.ImageView?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefWidth="400.0" prefHeight="300.0" stylesheets="@Style/Style.css">
    <VBox alignment="CENTER" spacing="10">
        <!-- Icon of the music note -->
        <ImageView fx:id="musicIcon" fitHeight="100.0" fitWidth="100.0" styleClass="music-icon"/>

        <!-- Progress bar -->
        <ProgressBar fx:id="progressBar" prefWidth="250.0" progress="0.5" styleClass="progress-bar"/>

        <!-- Controls -->
        <HBox alignment="CENTER" spacing="15">
            <Button fx:id="rewindButton" styleClass="control-button">
                <Label text="⏮"/>
            </Button>
            <Button fx:id="playButton" styleClass="control-button">
                <Label text="▶"/>
            </Button>
            <Button fx:id="pauseButton" styleClass="control-button">
                <Label text="⏸"/>
            </Button>
            <Button fx:id="forwardButton" styleClass="control-button">
                <Label text="⏭"/>
            </Button>
        </HBox>
    </VBox>
</AnchorPane>
